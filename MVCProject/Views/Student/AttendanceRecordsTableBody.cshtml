@model IEnumerable<DailyAttendanceRecord>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="5" class="text-center"><p class="lead">No Attendance available</p></td>

    </tr>
}
else
{
    foreach (var dailyAttendanceRecord in Model)
    {
        <tr>

            <td class="align-middle text-center">
                <span class="text-secondary text-xs font-weight-bold">@dailyAttendanceRecord.Date</span>
            </td>
            <td class="align-middle text-center">
                <span class="text-secondary text-xs font-weight-bold">@dailyAttendanceRecord.Date.DayOfWeek</span>
            </td>
            <td class="align-middle text-center">
                <p class="text-xs font-weight-bold mb-0">@dailyAttendanceRecord.TimeOfAttendance</p>
            </td>
            <td class="align-middle text-center">
                <p class="text-xs font-weight-bold mb-0">@dailyAttendanceRecord.TimeOfLeave</p>
            </td>
            <td class="align-middle text-center">
                <p class="text-xs font-weight-bold mb-0">@dailyAttendanceRecord.StudentDegree</p>
            </td>
            <td class="align-middle text-center text-sm">
                <span class="badge badge-sm bg-gradient-@(dailyAttendanceRecord.Status.ToLower() == "attend" ? "success" : dailyAttendanceRecord.Status.ToLower() == "late" ? "warning" : "danger")">
                    @dailyAttendanceRecord.Status
                </span>
            </td>

        </tr>

    }
}



