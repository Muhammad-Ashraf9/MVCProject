@model IEnumerable<Student>

@{
    ViewData["Title"] = "showStudentsDegrees";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section dashboardTitle {
    @ViewBag.instructor.Name Dashboard
}


@section role {
    Supervisor
}
    

@section links {
    <partial name="../partialViews/instructorLinks" />
}

<h2 class="text-center">Students' degrees for track @ViewBag.Track.Name</h2>
<table class="table table-light table-hover table-striped table-bordered text-center">
    <thead>
        <tr>
            <th>Student name</th>
            <th>Student Email</th>
            <th>Student Mobile</th>
            <th>Student degree</th>
        </tr>
    </thead>
    <tbody class="align-middle">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4"><p class="lead">No students in track @ViewBag.Track.Name</p></td>
            </tr>
        }
        else
        {
            @foreach (Student s in Model)
            {
                <tr>
                    <td>@s.Name</td>
                    <td>@s.Email</td>
                    <td>@s.Mobile</td>
                    <td>@s.StudentDegree</td>
                </tr>
            }
        }
    </tbody>
</table>



